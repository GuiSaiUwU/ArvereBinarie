<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" minHeight="205.0" minWidth="477.0" prefHeight="205.0" prefWidth="477.0" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gjls.arverebinarie.MenuInicialController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label text="Benchmark de Pesquisa" textAlignment="CENTER" />
    <Label prefWidth="394.0" text="Selecione um arquivo de texto para visualizar as palavras e a suas frequências no texto, além de indicadores de performance dos algoritmos implementados" textAlignment="CENTER" wrapText="true" />
    <GridPane alignment="CENTER" prefHeight="82.0" prefWidth="456.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Button fx:id="ButtonSelecionarArquivo" mnemonicParsing="false" onAction="#onButtonSelecionarArquivo" text="Selecionar Arquivo" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
