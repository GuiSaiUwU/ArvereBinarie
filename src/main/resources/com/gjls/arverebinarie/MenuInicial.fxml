        <Label fx:id="LabelArquivoSelecionado" alignment="CENTER_RIGHT" text="Nenhum" GridPane.halignment="CENTER" GridPane.hgrow="NEVER" GridPane.rowIndex="1" GridPane.valignment="CENTER" GridPane.vgrow="NEVER" />
      <Label text="Arquivo Selecionado:" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP" />
    </GridPane>
</VBox>
